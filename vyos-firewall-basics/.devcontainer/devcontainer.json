{
  "name": "VyOS Firewall Basics Lab",
  "image": "ghcr.io/srl-labs/containerlab/devcontainer-dind-slim:0.68.0",
  "runArgs": [
    "--privileged",
    "--network=host"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "containerlab version && docker pull ghcr.io/sever-sever/vyos-container:latest && docker pull alpine:latest",
  "remoteUser": "vscode"
}
